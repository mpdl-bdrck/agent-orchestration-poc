# Agentic CRAG Launchpad Environment Variables

# LLM Provider Configuration
GEMINI_API_KEY=your_gemini_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here  # Optional: for OpenAI provider
# ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Optional: for Anthropic provider

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/knowledge_base
# For per-context databases: DATABASE_URL will be constructed as postgresql://user:password@localhost:5432/{context_id}

# Vector Database Extension
# Ensure pgvector extension is installed: CREATE EXTENSION IF NOT EXISTS vector;

# Optional: Observability (Langfuse)
# LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
# LANGFUSE_SECRET_KEY=your_langfuse_secret_key
# LANGFUSE_HOST=https://cloud.langfuse.com

# Optional: Logging Level
# LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Portfolio Pacing Tool - PostgreSQL Database Configuration
POSTGRES_HOST=your_postgres_host_here
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name_here
POSTGRES_USER=your_postgres_user_here
POSTGRES_PASSWORD=your_postgres_password_here
